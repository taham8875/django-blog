{% extends 'blog/base.jinja2' %}
{% load crispy_forms_tags %}
{% block content %}
    <div class="content-section col-12 col-md-6 col-lg-4">
        <form action="" method="post">
            {% csrf_token %}
            <fieldset class="from-group">
                <legend>
                    Join Today
                </legend>
                {{ form|crispy }}
            </fieldset>
            <button class="btn btn-primary" type="submit">Sign Up</button>
        </form>
        <div>
            <span>Do you already have an account? <a class="link-primary" href="">Log in</a></span>
        </div>
    </div>
{% endblock content %}
