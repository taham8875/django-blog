{% extends 'blog/base.jinja2' %}
{% load crispy_forms_tags %}
{% block content %}
  <div class="content-section col-12 col-md-6 col-lg-4">
    <form action="" method="post">
      {% csrf_token %}
      <fieldset class="from-group">
        <legend>
          Login
        </legend>
        {{ form|crispy }}
      </fieldset>
      <button class="btn btn-primary mb-3" type="submit">Log in</button>
    </form>
    <div>
      <span>New to Django blog ? <a class="link-primary" href="{% url 'user-register' %}">Create an account</a></span>
    </div>
  </div>
{% endblock content %}
