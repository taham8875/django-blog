{% load static %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="{% static 'blog/favicon.jpg' %}" />
    <link rel="stylesheet" href="{% static 'blog/css/base.css' %}">
    <link rel="stylesheet" href="{% static 'blog/css/bootstrap.min.css' %}">
    {% if title %}
      <title>Django Blog - {{ title }}</title>
    {% else %}
      <title>Django Blog</title>
    {% endif %}
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light text-white px-5 mb-3">
      <div class="container">
        <a class="navbar-brand text-white" href="{% url 'blog-home' %}">Django blog</a>
        <button class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapse"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapse">
          <div class="d-flex align-center justify-content-between w-100">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link" href="{% url 'blog-home' %}">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{% url 'blog-about' %}">About</a>
              </li>
            </ul>
            {% if current_user.is_authenticated %}
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="">New Post</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="">Account</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="">Log out</a>
                </li>
              </ul>
            {% else %}
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href=" ">Register</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href=" ">Log in</a>
                </li>
              </ul>
            {% endif %}
          </div>
        </div>
      </div>
    </nav>
    <div class="container">
      {% comment %}
      {% with messages = get_flashed_messages(with_categories = true) %}
        {% if messages %}
          {% for category, message in messages %}<div class='alert alert-{{ category }}'>{{ message }}</div>{% endfor %}
        {% endif %}
      {% endwith %}
      {% endcomment %}
      {% block content %}
      {% endblock content %}
    </div>
    <script src="{% static 'blog/js/bootstrap.bundle.min.js' %}"></script>
    <script src="{% static 'blog/js/main.js' %}"></script>
    <script src="{% static 'blog/js/update_post.js' %}"></script>
  </body>
</html>
